{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ESNext",
        "esModuleInterop": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleResolution": "Node",
        "outDir": "./dist",
        "strict": true,
        "sourceMap": true,
        "types": ["node"],
        "baseUrl": "./",
        "paths": {
            "~/*": ["./src/*"],
            "*": ["*", "./*", "./src/*", "*/index.js"],
          },
        "checkJs": false
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}